/* pages/knowledge/knowledge.wxss */
.swiper {
    background: #fcfcfc;
}
.swiper-box {
    height: 340rpx;
    padding-top: 40rpx;
    background: #fff;
    box-shadow: 0 4rpx 24rpx 0 #F3F3F3;
    border-radius: 0 0 40rpx 40rpx;
}   
.topbanner{
    width: 100%;
    height: 100%;
}
.flex-wrp{
    position: relative;
    float: left;
    width: 33.3333333%;
    text-align: center;
    height: 160rpx;  
}
.flex-item{
    position: relative;
    float: left;
    width: 100%;
    text-align: center;
    height: 160rpx; 
  /* margin: 52rpx 0rpx 0rpx 128rpx;   */
}
.flex-wrp .flex-item image{
    display: block;
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    left: 50%;
    margin-left: -24rpx;
}
.flex-wrp .flex-item .flex-item-text{
    position: relative; 
    top: 60rpx; 
    font-size: 24rpx;
    color:#666666;
}

.swiper-list {
    padding: 0 40rpx;
}

.list-item {
    background: #fff;
    height: 120rpx;
    box-shadow: 0 4rpx 24rpx 0 #F3F3F3;
    border-radius: 8rpx;
    margin-top: 24rpx;
    padding: 0 45rpx;
    line-height: 120rpx;
}

.title {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #333333;
    letter-spacing: 0;
    float: left;
    width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.times {
    float: right;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
    letter-spacing: 0;
}

.bottom {
    width: 100%;
    height: 300rpx;
    font-size: 32rpx;
    text-align: center;
    color: #999;
    margin-top: 20rpx;
}