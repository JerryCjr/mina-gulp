/* pages/punch_card/punch_card.wxss */
.punch {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}
.punch_box {
    width: 100%;
    padding-left: 40rpx;
    box-sizing: border-box;
}
.punch_count {
    height: 120rpx;
    font-family: PingFangSC-Medium;
    font-size: 40rpx;
    color: #333333;
    background: #FFFFFF;
    border: 0 solid #EEEEEE;
    box-shadow: 0 4rpx 24rpx 0 rgba(0,0,0,0.03);
    border-radius: 12rpx;
    margin: 40rpx 0;
    display: flex;
    position: relative;
    text-align: center;
    justify-content: center;
}

.punch-count-col1 {
    color: #3F3F3F;
    line-height: 40rpx;
    font-size: 30rpx;
    top: 20rpx;
}

.punch-count-col2 {
    color: #666;
    font-size: 24rpx;
    top: 25rpx;
}

.punch_count view text {
    display: block;
    font-family: PingFangSC-Regular;
    position: relative;
}
.bottom {
    width: 100%;
    height: 100rpx;
    font-size: 32rpx;
    text-align: center;
    color: #999;
    margin-top: 20rpx;
}
.student {
    width: 50%;
    display: inline-block;
    margin-top: 40rpx;
}
.name {
    display: inline-block;
    position: relative;
    top: -18rpx;
    left: 20rpx;
    font-size: 32rpx;
    color: #333;

}
.name text {
    display: block;
}
.col1 {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #333333;
}
.student_img {
    width: 104rpx;
    height: 104rpx;
    border-radius: 100%;
}
.pic {
    width: 248rpx;
    height: 442rpx;
    position: relative;
    left: 50%;
    margin-left: -124rpx;
    margin-top: 20rpx;
}
.pic image {
    width: 100%;
    height: 432rpx;
    border-radius: 10rpx;
}