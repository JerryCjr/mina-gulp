/* pages/pro_personal/pro_personal.wxss */
.head {
    padding: 0 30rpx;
}
.input {
    width: 460rpx;
    height: 55rpx;
    border: 1px solid #27daae;
    border-radius: 30rpx;
    position: relative;
    margin-top: 16rpx;
    float: left;
}
.search {
    position: absolute;
    width: 34rpx;
    height: 34rpx;
    right: 20rpx;
    top: 10rpx;
}
.wx_name {
    height: 34rpx;
    padding-left: 20rpx;
    font-size: 32rpx;
}

.head-title {
    float: right;
    background: #FFFFFF;
    border: 2rpx solid #CCCCCC;
    border-radius: 200rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #4A4A4A;
    letter-spacing: 0;
    text-align: center;
    padding: 8rpx 28rpx;
    position: relative;
    top: 14rpx;
}

.main-head {
    display: flex;
    height: 97rpx;
    line-height: 97rpx;
    border-top: 2rpx solid #eee;
    border-bottom: 2rpx solid #eee;
    margin-top: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #000000;
    letter-spacing: 0;
    text-align: center;
}

.main-head-photo {
    width: 80rpx;
    margin-left: 44rpx;
    margin-right: 44rpx;
}

.main-head-photo image {
    width: 76rpx;
    height: 76rpx;
    border-radius: 100%;
    position: relative;
    top: 10rpx;
}

.main-head-name {
    flex: 1;
    text-align: left;
    margin-right: 44rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.main-head-progress {
    width: 150rpx;
    margin-right: 40rpx;
    text-align: center;
}

.main-head-progress image {
    width: 20rpx;
    height: 14rpx;
    margin-left: 10rpx;
}

.main-list-info {
    display: flex;
    height: 97rpx;
    line-height: 97rpx;
    border-bottom: 2rpx solid #eee;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #000000;
    letter-spacing: 0;
}

#pull-box{
  width: 100%;
  overflow: hidden;
  height: 0;
  animation-fill-mode: forwards;
}

#item-list{
    background-color: white;
    width: 100%;
    position: relative;
}

#item-list view{
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #999999;
    letter-spacing: 0;
}

@keyframes slidedown{
    from {
        height: 0;
        border-bottom: 2rpx solid #ddd;
    }
    to {
        height: 420rpx;
        border-bottom: 2rpx solid #ddd;
    }
}

@keyframes slideup{
    from {
        height: 420rpx;
    }
    to {
        height: 0;
        border-bottom: none;
    }
}

.open{
    animation: slidedown 1s;
}

.close{
    animation: slideup 1s; 
    border: none;
}

.hide{
    display: none;
}

.show{
    display: block;
}

.item-list-li {
    display: flex;
    height: 48rpx;
    line-height: 48rpx;
}

.li-pic image {
    width: 48rpx;
    height: 48rpx;
}

.li-pic {
    margin-left: 168rpx;
    margin-right: 40rpx;
}

.li-title {
    margin-right: 66rpx;
}

.perch {
    height: 24rpx;
}

.line {
    position: absolute;
    height: 60rpx;
    width: 4rpx;
    background: #34DCB2;
    left: 190rpx;
}

.line1 {
    top: 72rpx;
}

.line2 {
    top: 180rpx;
}

.line3 {
    top: 288rpx;
}

.mr {
    margin-top: 60rpx;
}

.clear {
    clear: both;
}

.col {
    color: #34DCB2!important;
}

.placeholder-col {
    color: #9B9B9B!important;
}

.bottom {
    width: 100%;
    height: 100rpx;
    font-size: 32rpx;
    text-align: center;
    color: #999;
    margin-top: 20rpx;
}