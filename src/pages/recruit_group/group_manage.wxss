/* pages/recruit_group/group_manage.wxss */

page {
  background: #fafafa;
}

.no-reach .top {
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}

.no-reach  .top image {
  width: 401rpx;
  height: 214rpx;
}

.no-reach  .step {
  text-align: center;
}

.no-reach  .step image {
  width: 94rpx;
  height: 94rpx;
  vertical-align: top;
}

.no-reach  .step .hint {
  margin: 0 auto;
  width: 400rpx;
  font-size: 28rpx;
  color: #666;
  font-family: PingFangSC-Regular;
  line-height: 60rpx;
  text-align: center;
  border-bottom: 3rpx #efe6d5 dashed;
}

.no-reach  .active::after {
  border: none;
}

.no-reach  .active {
  background-color: transparent;
  width: 590rpx;
  height: 88rpx;
  margin-top: 130rpx;
  line-height: 88rpx;
  text-align: center;
  background: #39d7d3;
  box-shadow: 0 8rpx 10rpx -6rpx #6fdddd;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #fff;
}

.group {
  padding: 0.1px;
}

.group .top {
  position: fixed;
  top: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.10);
  padding-bottom: 30rpx;
  z-index: 10;
}

.group .top-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}

.group .top-bar image {
  margin-right: 10rpx;
  vertical-align: middle;
}

.group .top-bar text {
  vertical-align: middle;
}

.group .top-bar .assistant {
  color: #666;
}

.group .top-bar .assistant image {
  width: 40rpx;
  height: 34rpx;
}

.group .top-bar .fingerpost {
  color: #0ac1c1;
}

.group .top-bar .fingerpost image {
  width: 32rpx;
  height: 32rpx;
}

.group .update-time {
  position: relative;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #cacaca;
  text-align: center;
}

.group .line {
  position: absolute;
  top: 16rpx;
  width: 140rpx;
  height: 2rpx;
  background: #e6e6e6;
}

.group .left-line {
  left: 30rpx;
}

.group .right-line {
  right: 30rpx;
}

.group-info {
  margin-top: 40rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  color: #333;
}

.group-avatar {
  width: 90rpx;
  height: 90rpx;
  vertical-align: middle;
  border-radius: 5rpx;
}

.group-name {
  vertical-align: middle;
  margin-left: 20rpx;
  display: inline-block;
}

.group-name text:nth-of-type(1) {
  display: inline-block;
  max-width: 370rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.error-hint {
  position: fixed;
  top: 270rpx;
  width: 100%;
  height: 70rpx;
  text-align: center;
  line-height: 76rpx;
  font-size: 24rpx;
  z-index: 9;
}

.hint-danger {
  background: #faedeb;
  color: #ff5e4c;
}

.hint-warning {
  background: #f2f2f2;
  color: #999;
}

.group-name text {
  vertical-align: middle;
}

.member-info {
  padding-top: 280rpx;
}

.member-list {
  background: #fafafa;
  padding: 0 30rpx;
}

.member-item {
  padding: 15rpx 0 15rpx 10rpx;
  border-bottom: 2rpx solid #f2f2f2;
  font-size: 28rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.member-avatar {
  position: relative;
  display: inline-block;
}

.member-image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 12rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  vertical-align: middle;
}

.member-name {
  display: inline-block;
  vertical-align: middle;
  width: 145rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.identity {
  width: 112rpx;
  height: 60rpx;
  position: absolute;
  bottom: -25rpx;
  left: -22rpx;
  font-size: 36rpx;
  color: #333;
  border-radius: 35rpx;
  text-align: center;
  line-height: 60rpx;
  border: 2px solid #fff;
  transform: scale(0.5, 0.5);
}

.member-type-1 {
  background: #ffe977;
}

.member-type-2 {
  background: #97f0ee;
}

.member-type-3 {
  background: #a2e0fc;
}

.jion-days {
  display: inline-block;
  width: 180rpx;
  text-align: center;
}

.bind-state {
  display: inline-block;
  width: 120rpx;
  text-align: right;
}

.emphasis {
  color: #ff5e4c;
}

.list-end {
  width: 100%;
  height: 80rpx;
  font-size: 24rpx;
  text-align: center;
  color: #999;
  line-height: 80rpx;
}

.list-end image {
  width: 34rpx;
  height: 34rpx;
}
