/* pages/invite_page/invite_page.wxss */
.box {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.login {
    position: absolute;
    top: 28rpx;
    left: 30rpx;
    z-index: 99;
    font-family: STYuanti-SC-Regular;
    font-size: 24rpx;
    color: #342068;
    letter-spacing: 0;
}

.login image {
    height: 22rpx;
    width: 11rpx;
    vertical-align: middle;
    margin-right: 10rpx;
    position: relative;
    top: -2rpx;
}

.pic {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.pic image {
    width: 100%;
    height: 100%;
}

.btn {
    display: flex;
    position: absolute;
    /* top: 84%; */
    left: 30rpx;
    right: 30rpx;
    background: rgba(0, 0, 0, 0);
}

.btn button {
    width: 330rpx;
    height: 98rpx;
    background: #55D1AF;
    box-shadow: 0 4rpx 10rpx 0 rgba(36,182,170,0.50);
    border-radius: 49rpx;
    font-family: STYuanti-SC-Bold;
    font-size: 36rpx;
    color: #FFFFFF;
    letter-spacing: 2rpx;
    text-align: center;
    line-height: 98rpx;
}

.btn button::after {
    border: none;
}

/* 弹出框 */
.mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, .3);
    z-index: 9;
}

.dialog {
    width: 590rpx;
    height: 489rpx;
    background: #FFFFFF;
    border-radius: 24rpx;
    margin: 300rpx auto;
    text-align: center;
    padding: 0 40rpx;
    position: relative;
}

.dialog-title {
    font-family: STYuanti-SC-Bold;
    font-size: 44rpx;
    color: #1BD7C8;
    letter-spacing: 1.16rpx;
    text-align: center;
    line-height: 48rpx;
    padding-top: 70rpx;
    margin-bottom: 45rpx;
}

.dialog-content {
    font-family: STYuanti-SC-Regular;
    font-size: 30rpx;
    color: #3C3C3C;
    letter-spacing: 0;
    text-align: center;
    line-height: 50rpx;
}

.dialog-btn {
    width: 400rpx;
    height: 98rpx;
    margin: auto;
    margin-top: 60rpx;
}

.dialog-btn button {
    width: 100%;
    height: 100%;
    background: #55D1AF;
    border-radius: 49rpx;
    font-family: STYuanti-SC-Bold;
    font-size: 36rpx;
    color: #FFFFFF;
    letter-spacing: 2rpx;
    text-align: center;
    line-height: 98rpx;
}

.dialog-btn button::after {
    border: none;
}

.close-btn {
    width: 26rpx;
    height: 26rpx;
    position: absolute;
    right: 22rpx;
    top: 10rpx;
}

.close-btn image {
    width: 100%;
    height: 100%;
}