/* pages/invite_page/invited_page.wxss */
.box {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.login {
    position: absolute;
    top: 28rpx;
    left: 30rpx;
    z-index: 99;
    font-family: STYuanti-SC-Regular;
    font-size: 24rpx;
    color: #342068;
    letter-spacing: 0;
}

.login image {
    height: 22rpx;
    width: 11rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.pic {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.pic image {
    width: 100%;
    height: 100%;
}

.btn {
    display: flex;
    position: absolute;
    /* top: 84%; */
    left: 45rpx;
    right: 45rpx;
    background: rgba(0, 0, 0, 0);
}
.btn view {
    width: 100%;
}   

.btn button {
    width: 100%;
    height: 98rpx;
    background: #55D1AF;
    box-shadow: 0 4rpx 10rpx 0 rgba(36,182,170,0.50);
    border-radius: 49rpx;
    font-family: STYuanti-SC-Bold;
    font-size: 36rpx;
    color: #FFFFFF;
    letter-spacing: 2rpx;
    text-align: center;
}

.btn button::after {
    border: none;
}

.info {
    display: flex;
    position: absolute;
    /* top: 160rpx; */
    left: 73rpx;
}

.info image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 100%;
    margin-right: 20rpx;
}

.info text {
    display: block;
}

.info text:first-child {
    font-family: STYuanti-SC-Bold;
    font-size: 30rpx;
    color: #333333;
    letter-spacing: 0;
    margin-top: 17rpx;
    margin-bottom: 25rpx;
}

.info text:last-child {
    font-family: STYuanti-SC-Regular;
    font-size: 30rpx;
    color: #666666;
    letter-spacing: 0;
    line-height: 30rpx;
}