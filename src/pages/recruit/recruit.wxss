}
.info-input {
    position: relative;
    padding: 20rpx 40rpx;
    background: #FFFFFF;
    box-shadow: 0 2px 8px 0 rgba(0,0,0,0.10);
    border-radius: 44rpx;
}
.info-input image {
    position: absolute;
    width: 16rpx;
    height: 9rpx;
    right: 37rpx;
    top: 45rpx;
}
.info-input input {
    border-bottom: 1px solid #EAECF0;
    font-size: 30rpx;
    /* height: 86rpx; */
    padding-left: 30rpx;
    padding-right: 30rpx;
}
.info-input input:last-child {
    border-bottom: none;
}
.info-input button {
    height: 50rpx;
    font-size: 30rpx;
    text-align: left;
    line-height: 50rpx;
    color: #333;
    border: #fff;
    background: #fff;
}
.info-input button::after{ 
    border: none;
}
.radio {
    font-size: 30rpx;
    color: #787878;
}
.radio text {
    position: relative;
    top: 3rpx;
