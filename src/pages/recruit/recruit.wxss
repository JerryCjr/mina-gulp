.service {
    position: fixed;
    right: 0;
    top: 400rpx;
    width: 120rpx;
    height: 80rpx;
    background: rgba(85,209,175,0.80);
    box-shadow: 0 2px 8px 0 rgba(85,209,175,0.30);
    border-radius: 70rpx 0 0 70rpx;
    z-index: 999;
    text-align: center;
    padding: 10rpx 10rpx;
}
.service image {
    width: 44rpx;
    height: 39rpx;
    position: relative;
    left: 10rpx;
}
.service text {
    display: block;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #FFFFFF;
    position: relative;
    top: -3rpx;
    left: 10rpx;
}
.need {
    height: 200rpx;
    background: #55D1AF;
    border-radius: 0 0 80rpx 80rpx;
    text-align: center;
    position: relative;
}
.need text {
    font-size: 40rpx;
    color: #FFFFA0;
    line-height: 135rpx;
}
.need image {
    position: absolute;
    width: 480rpx;
    height: 40rpx;
    left: 135rpx;
    top: 70rpx;
}
.content {
    padding: 0 40rpx;
    margin-top: 184rpx;
}
.need-remind {
    border-radius: 44rpx;
    background: #fff;
    box-shadow: 0 2px 8px 0 rgba(0,0,0,0.10);
    position: absolute;
    top: 120rpx;
    left: 40rpx;
    right: 40rpx;
    padding: 40rpx 30rpx 40rpx 50rpx; 
    z-index: 99;
}
.need-remind-txt {
    display: inline-block;
    font-size: 28rpx;
    color: #3C3C3C;
}
.need-remind .icon {
    display: inline-block;
    width: 10rpx;
    height: 10rpx;
    background: #000;
    border-radius: 100%;
    position: relative;
    top: -5rpx;
    left: -10rpx;
}
.import image{
    width: 26rpx;
    height: 26rpx;
    margin-right: 5rpx;
}
.import {
    font-size: 26rpx;
    color: #A0A0A0;
    padding-top: 50rpx;
}
.headline .NO{
    display: inline-block;
    font-size: 36rpx;
    color: #55D1AF;
    margin-right: 10rpx;
}
.headline .base {
    font-size: 30rpx;
