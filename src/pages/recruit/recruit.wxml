            <view class='big-btns'>
                <button class='btns' bindtap='submitFun'>提交申请</button>
            </view>
            
        </view>    
    </view>
    <action-sheet hidden="{{actionSheetHidden}}" bindchange="listenerActionSheet" >

        <block wx:for-items="{{actionSheetItems}}" wx:key > 
            <action-sheet-item bindtap="choiceTime" data-val='{{item}}'>{{item}}</action-sheet-item>
        </block>
        <!--自动隐藏action-sheet-->
        <action-sheet-cancel>取消</action-sheet-cancel>
    </action-sheet>
    <action-sheet hidden="{{actionWorkHidden}}" bindchange="listenerActionWork" >

        <block wx:for-items="{{actionWorkItems}}" wx:key > 
            <action-sheet-item bindtap="choiceWork" data-val='{{item}}'>{{item}}</action-sheet-item>
        </block>
        <!--自动隐藏action-sheet-->
        <action-sheet-cancel>取消</action-sheet-cancel>
    </action-sheet>
    <action-sheet hidden="{{actionRoleHidden}}" bindchange="listenerActionRole" >

        <block wx:for-items="{{actionRoleItems}}" wx:key > 
            <action-sheet-item bindtap="choiceRole" data-val='{{item}}'>{{item}}</action-sheet-item>
        </block>
        <!--自动隐藏action-sheet-->
        <action-sheet-cancel>取消</action-sheet-cancel>
    </action-sheet>
    <action-sheet hidden="{{actionNumHidden}}" bindchange="listenerActionNum" >
        <block wx:for-items="{{actionNumItems}}" wx:key > 
            <action-sheet-item bindtap="choiceNum" data-val='{{item}}'>{{item}}</action-sheet-item>
        </block>
        <!--自动隐藏action-sheet-->
        <action-sheet-cancel>取消</action-sheet-cancel>
    </action-sheet>
    <view class="picker-view" animation="{{animationAddressMenu}}" style="visibility:{{addressMenuIsShow ? 'visible':'hidden'}}">
        <view style="height:20% ;width:95%;margin-top:20rpx">
        <text bindtap="cityCancel" style="margin-left:20rpx">取消</text>
        <text style="float: right;margin-right:20rpx" bindtap="citySure">确定</text>
        </view> 
        <picker-view style="width: 100%; height: 500px;" bindchange="cityChange" value="{{value}}" wx:key="">
        <picker-view-column>
            <view wx:for="{{provinces}}" class="picker-item" wx:key="">
            {{item.n}}
            </view>
        </picker-view-column>
        <picker-view-column>
            <view wx:for="{{citys}}" class="picker-item" wx:key="">
            {{item.n}}
            </view>
        </picker-view-column>
        <picker-view-column>
            <view wx:for="{{areas}}" class="picker-item" wx:key="">
            {{item.n}}
            </view>
        </picker-view-column>
        </picker-view>  
    </view>
</view>
