.training {
    padding: 0 60rpx;
}
.title {
    text-align: center;
    margin-bottom: 40rpx;
}
.link-box {
    width: 600rpx;
    height: 700rpx;
    border: 1px solid #e3e3e3;
    color: #333;
    padding: 30rpx 20rpx; 
}
.link {
    width: 600rpx;
    height: 700rpx;
    overflow-y: scroll;
    font-size: 32rpx;
    color: #333;
    text-align: center; 
}
.click-btn {
    margin-top: 50rpx;
    width: 100%;
}
.click-btn button {
    width: 190rpx;
    height: 66rpx;
    float: left;
    line-height: 66rpx;
    font-size: 32rpx;
    color: #fff;
}
.gain {
    background: #00d0ff;
    float: left;
}
.save {
    background: #27daae;
    float: left;
    margin-left: 31rpx;
    margin-right: 31rpx;
}
.copy {
    background: #f570a6;
    float: right;
}
.date {
    font-size: 28rpx;
    color: #999;
    text-align: center;
    position: fixed;
    bottom: 20rpx;
    right: 0;
    left: 0;
    margin: auto;
}
