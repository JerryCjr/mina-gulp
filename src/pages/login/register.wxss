.login{
    padding:50% 0 0;
    margin: 0 15%;
    width:70%;
}
input{
    height:50px;line-height:50px;padding-left:45px;position: relative;border-bottom:1px solid rgba(153, 153, 153, .1);margin-bottom:5px;
}
.ph{
    color:#999;
}
.user:after{ 
    display:block;
    position: absolute;
    top:50%;
    left:0;
    margin-top:-12px;
    width:24px;
    height:24px;
    content: '';
    background: url(data:image/png;base64,) no-repeat;background-size:100%;
    
}
.pw::after{ 
    display:block;
    position: absolute;
    top:50%;
    left: 0;
    margin-top:-12px;
    width:24px;
    height:24px;
    content: '';
    background: url(data:image/png;base64,) no-repeat;background-size:100%;
    
}
.btn-login{margin-top: 60rpx;background-color: #FF5066;}
.btn-re {margin-top: 40rpx;background-color: #0dc79b;}
.link{margin:40rpx auto;text-align:center;}
.msg-err{color:red; text-align:center;position:absolute;width:300px;left:50%;margin-left:-150px;}
.remind{margin-top: 30rpx; color: #13cfe4; text-align: center}
.mr{margin-right: 40rpx;}
.txt {
    display: inline-block;
} 
.code {
    display: inline-block;
    width: 200rpx;
    padding: 0 40rpx; 
}
.btn-code {
    position: relative;
    top: -20rpx;
    left: 0;
    display: inline-block;
    color: rgb(17, 204, 228);
    background: #fff;
    font-size: 30rpx;
    border: 2rpx solid #ddd;
}

.btn-code::after {
    border: none;
}